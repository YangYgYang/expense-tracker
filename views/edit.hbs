<div class="container-content m-5">
    <div class="d-flex justify-content-center">
    <span class="fs-3">修改支出</span>
    </div>
    <form action="/accounting/{{this._id}}/edit?_method=PUT" method="post" class="d-flex flex-column mb-3  align-items-center">
        
        <div class="d-flex mt-2">
            <div class="input-group-text">支出項目：</div>
            <div class="input-group">
                <input type="text" class="form-control" name="item" value="{{this.item}}" aria-label="Amount (to the nearest dollar)">
            </div>  
        </div>

        <div class="d-flex mt-2">
            <div class="input-group-text">日期：</div>
            <div class="input-group">
                <input type="date" class="form-control" name="date" value="{{this.date}}" aria-label="Amount (to the nearest dollar)">
            </div>  
        </div>

        <div class="d-flex mt-2">
            <div class="input-group-text">類別：</div>
            <div class="input-group">        
                <select class="form-select" name="categoryId" aria-label="Default select example">
                    {{!-- <option selected>Open this select menu</option> --}}
                    <option value="1" >家居物業</option>
                    <option value="2" >交通出行</option>
                    <option value="3" >休閒娛樂</option>
                    <option value="4" >餐飲食品</option>
                    <option value="5" >其他</option>
                </select>
            </div>  
        </div>

        <div class="d-flex mt-2">
            <div class="input-group-text">金額：</div>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" name="subTotal" value="{{this.subTotal}}" aria-label="Amount (to the nearest dollar)">
            </div>  
        </div>

    <div class="mt-2">
      <button id="submit-btn" type="submit" class="btn btn-warning">送出</button>
    </div>

    </form>
</div>

<script>
    document.querySelectorAll('.form-select option')
    .forEach(e => { 
        if(e.value == {{this.categoryId}})
        e.setAttribute('selected', 'selected') 
        })
</script>