<div class="container">
    <p>請輸入您的支出</p>
    <form action="/accounting/create" method="post">
        
        <div class="d-flex">
            <div class="input-group-text">支出項目：</div>
            <div class="input-group">
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
            </div>  
        </div>
        <div class="d-flex">
            <div class="input-group-text">日期：</div>
            <div class="input-group">
                <input type="date" class="form-control" aria-label="Amount (to the nearest dollar)">
            </div>  
        </div>
        <div class="d-flex">
            <div class="input-group-text">類別：</div>
            <div class="input-group">        
                <select class="form-select" aria-label="Default select example">
                    {{!-- <option selected>Open this select menu</option> --}}
                    <option value="1">家居物業</option>
                    <option value="2">交通出行</option>
                    <option value="3">休閒娛樂</option>
                    <option value="4">餐飲食品</option>
                    <option value="5">其他</option>
                </select>
            </div>  
        </div>
        <div class="d-flex">
            <div class="input-group-text">金額：</div>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
            </div>  
        </div>

      <button id="submit-btn" type="submit" class="btn btn-warning">新增</button>
    </form>
</div>